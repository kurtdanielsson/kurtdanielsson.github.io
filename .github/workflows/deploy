name: CI
on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Run a one-line script
        run: |
          npm install
          npm run build
      - name: Deploy GitHub Pages site
        uses: actions/deploy-pages@v2.0.0
